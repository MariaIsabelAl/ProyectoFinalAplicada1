<Window x:Class="DataVentas.UI.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataVentas.UI.Login"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" Background="#06F64F">
    <Grid>
        
        <Border Background="Black" CornerRadius="20" Margin="20">
            <StackPanel>
                <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
                <Separator/>
                <Label Content="Username" Foreground="White"/>
                <TextBox x:Name="UsernameTextBox" Background="Gray" Foreground="White" FontSize="18"/>
                <Label Content="Password" Foreground="White"/>
                <TextBox x:Name="PasswordTextBox" Background="Gray" Foreground="White" FontSize="18"/>
                <Button x:Name="EntrarButton" Content="Entrar" Margin="60 10" Background="Gray" Foreground="White" Click="EntrarButton_Click"/>
            </StackPanel>
        </Border>
        
        
    </Grid>
</Window>
